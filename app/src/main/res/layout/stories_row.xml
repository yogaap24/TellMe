<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:paddingHorizontal="8dp"
    android:background="?attr/selectableItemBackground"
    android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/iv_story_row"
        style="@style/Base.Theme.TellMe"
        android:layout_width="104dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        tools:src="@tools:sample/backgrounds/scenic"
        tools:text="Story Title" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_title_row"
                style="@style/Base.Theme.TellMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/ic_account"
                tools:text="Story Title" />
            <TextView
                android:id="@+id/tv_date_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                tools:text="31 Jan 2022" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_desc_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="@tools:sample/lorem/random" />
    </LinearLayout>
</LinearLayout>
